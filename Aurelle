<script>
const lessons = {
  1: {
    title: "Level 1 â€“ ASL Alphabet",
    steps: [
      "ASL Letter A",
      "ASL Letter B",
      "ASL Letter C"
    ]
  },
  2: {
    title: "Level 2 â€“ Common Phrases",
    steps: [
      "Hello",
      "Thank you",
      "How are you?"
    ]
  },
  3: {
    title: "Level 3 â€“ Daily Questions",
    steps: [
      "What is your name?",
      "Where are you from?",
      "How old are you?"
    ]
  }
};

let current = [];
let index = 0;

function openLesson(level) {
  current = lessons[level].steps;
  index = 0;
  document.getElementById("lessonTitle").innerText = lessons[level].title;
  document.getElementById("lessonText").innerText = current[index];
  document.getElementById("lessonImage").src =
    "https://via.placeholder.com/300x200?text=ASL+Sign";
  document.getElementById("lessonBox").style.display = "block";
}

function next() {
  index++;
  if (index < current.length) {
    document.getElementById("lessonText").innerText = current[index];
  } else {
    document.getElementById("lessonText").innerText = "ðŸŽ‰ Lesson Complete!";
  }
}
</script>

