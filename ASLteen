<div class="progress">
<div class="progress-bar" id="progressBar"></div>
</div>

<div class="level-grid">
<div class="level" onclick="startLevel(1)">Level 1</div>
<div class="level" onclick="startLevel(2)">Level 2</div>
<div class="level" onclick="startLevel(3)">Level 3</div>
<div class="level" onclick="startLevel(4)">Level 4</div>
</div>

<div class="lesson" id="lessonBox">
<h2 id="lessonTitle"></h2>
<div id="lessonContent"></div>
</div>

<script>

let xp = 0;
let streak = 0;
let step = 0;
let currentAnswer = "";

const alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ".split("");

const phrases = [
  {question:"How do you sign HELLO?", answer:"hello"},
  {question:"How do you sign THANK YOU?", answer:"thank you"},
  {question:"How do you sign PLEASE?", answer:"please"},
  {question:"How do you sign SORRY?", answer:"sorry"}
];

function startLevel(level){
  step = 0;
  document.getElementById("lessonBox").style.display="block";
  document.getElementById("lessonTitle").innerText="Level "+level;

  if(level===1){
    document.getElementById("lessonContent").innerHTML=`
      <p>Watch and learn the ASL Alphabet:</p>
      <iframe src="https://www.youtube.com/embed/VIDEO_ID_1" allowfullscreen></iframe>
    `;
    resetProgress();
  }

  if(level===2){
    generateAlphabetQuiz();
  }

  if(level===3){
    document.getElementById("lessonContent").innerHTML=`
      <p>Watch common ASL phrases:</p>
      <iframe src="https://www.youtube.com/embed/VIDEO_ID_2" allowfullscreen></iframe>
    `;
    resetProgress();
  }

  if(level===4){
    generatePhraseQuiz();
  }
}

function generateAlphabetQuiz(){
  let randomLetter = alphabet[Math.floor(Math.random()*alphabet.length)];
  currentAnswer = randomLetter;

  document.getElementById("lessonContent").innerHTML=`
    <p>AI Generated Letter:</p>
    <h2 style="font-size:60px;color:#3b82f6;">${randomLetter}</h2>
    <p>Type the correct letter shown in ASL:</p>
    <input id="userInput" maxlength="1">
    <br>
    <button onclick="checkAnswer()">Submit</button>
  `;
}

function generatePhraseQuiz(){
  let random = phrases[Math.floor(Math.random()*phrases.length)];
  currentAnswer = random.answer;

  document.getElementById("lessonContent").innerHTML=`
    <p>${random.question}</p>
    <input id="userInput">
    <br>
    <button onclick="checkAnswer()">Submit</button>
  `;
}

function checkAnswer(){
  let user = document.getElementById("userInput").value.toLowerCase().trim();

  if(user === currentAnswer.toLowerCase()){
    xp += 10;
    streak += 1;
    updateStats();
    updateProgress();
    alert("Correct! AI confirmed your answer!");
    if(currentAnswer.length === 1){
      generateAlphabetQuiz();
    } else {
      generatePhraseQuiz();
    }
  } else {
    streak = 0;
    updateStats();
    alert("Incorrect. Try again!");
  }
}

function updateStats(){
  document.getElementById("xp").innerText = xp;
  document.getElementById("streak").innerText = streak;
}

function updateProgress(){
  step++;
  document.getElementById("progressBar").style.width =
  (step%10)*10 + "%";
}

function resetProgress(){
  document.getElementById("progressBar").style.width = "0%";
}

</script>

</body>
